  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.8",
    "babel-jest": "^29.7.0",
    "eslint": "^8.6.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
